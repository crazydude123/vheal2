<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout
    android:background="#ffffffff"
    android:minHeight="25px"
    android:minWidth="25px"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical" xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        app:cardCornerRadius="10dp">


    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbox7"
        android:orientation="vertical">

    <EditText android:background="@drawable/roundbox3"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textname"
        android:textColorHint="#ff80deea"
        android:textColor="#ff263238"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:minLines="70"
        android:inputType="textEmailAddress"
        android:hint="Enter your email"
        android:drawableBottom="#ff263238"
        android:layout_margin="30dp"
        android:id="@+id/textemail"/>

    <EditText
        android:id="@+id/textname"
        android:background="@drawable/roundbox3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:hint="Enter your Name"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="#ffff5722"
        app:layout_constraintBottom_toTopOf="@+id/textphone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textemail" />

    <EditText
        android:id="@+id/textphone"
        android:background="@drawable/roundbox3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:hint="Enter your Contact number"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="#ff39e568"
        app:layout_constraintBottom_toTopOf="@+id/otp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textname" />

    <Button android:background="@drawable/roundbox6"
            android:layout_height="wrap_content"
        android:layout_gravity="center"
            android:layout_width="93dp"
            android:textColor="#ff020202"
            android:layout_margin="20dp"
            android:id="@+id/otp"
            android:textStyle="bold" android:textColorHighlight="#ff0e0202"
            android:text="Get OTP >"/>

    <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
        android:background="@drawable/roundbox3"
            android:hint="Enter your password"
            android:textColor="@color/colourWhite"
            android:paddingEnd="40dp"
            android:paddingStart="40dp"
            android:inputType="textPassword"
            android:layout_margin="30dp"
            android:id="@+id/editText"
            android:padding="10dp"
            android:ems="5"/>

    <Button android:background="@drawable/roundbox6"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
        android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#ff020202"
            android:layout_margin="20dp"
            android:id="@+id/Done"
            app:layout_constraintTop_toBottomOf="@+id/otp"
            android:textStyle="bold"
            android:textColorHighlight="#ff0e0202"
            android:text="Register >"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </LinearLayout>
    </android.support.v7.widget.CardView>

    </ScrollView>

</LinearLayout>
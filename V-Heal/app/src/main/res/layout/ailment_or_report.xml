<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#ffffffff"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical" xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            app:cardCornerRadius="10dp">


            <LinearLayout
                android:id="@+id/email_login_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundbox2"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:padding="10dp"
                    android:text="Name"
                    android:textColor="@color/colourBlack"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/patientname"
                    android:layout_width="197dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/roundbox3"
                    android:ems="10"
                    android:hint="Ex. Amitabh"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="@color/colourBlack"
                    android:textColorHint="@color/colourLime" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:lineSpacingExtra="24sp"
                    android:padding="10dp"
                    android:text="Phone"
                    android:textAppearance="@style/GreenText"
                    android:textColor="@color/colourBlack"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="197dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/roundbox3"
                    android:ems="10"
                    android:hint="Ex. 90123*****"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="@color/colourBlack"
                    android:textColorHint="@color/colourLime" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:text="Diesease"
                    android:textColor="@color/colourBlack"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/diseasetext"
                    android:layout_width="197dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/roundbox3"
                    android:ems="10"
                    android:hint="Ex. malaria, dengue"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="@color/colourBlack"
                    android:textColorHint="@color/colourLime" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="40dp"
                        android:layout_marginLeft="40dp"
                        android:padding="10dp"
                        android:text="Age"
                        android:textColor="@color/colourBlack"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <NumberPicker
                        android:id="@+id/np"
                        android:background="@drawable/roundbox6"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="50dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginBottom="0dp" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/textView2"
                    android:background="@drawable/roundbox6"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="8dp"
                    android:padding="10dp"
                    android:text="Have you consulted a doctor or not?"
                    android:textAlignment="center"
                    android:textColor="@color/colourBlack"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/textView2"
                        android:layout_gravity="center"
                        android:layout_margin="35dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="30dp"
                            android:onClick="onRadioButtonClicked"
                            android:text="YES" />

                        <RadioButton
                            android:id="@+id/radio2"
                            android:layout_margin="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onRadioButtonClicked"
                            android:text="NO" />
                    </RadioGroup>


                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatingActionButton"
                    android:layout_width="52dp"
                    android:layout_height="51dp"
                    android:layout_gravity="end"
                    android:clickable="true"
                    android:onClick="onClickFloat"
                    app:srcCompat="@mipmap/tick" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </ScrollView>

</LinearLayout>